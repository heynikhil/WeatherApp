<?xml version="1.0" encoding="utf-8"?>




<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

tools:context="com.example.gedion.weather.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/dateTextView"
        android:layout_marginRight="20dp"
        android:layout_marginTop="19dp"
        android:text="City"
        android:textColor="?android:attr/colorControlActivated"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        tools:ignore="HardcodedText,RtlHardcoded" />
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempTextView" android:textSize="120sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="38dp"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="30dp"
        android:layout_alignBottom="@+id/weatherDesctextView"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Â°F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/tempTextView" android:layout_toRightOf="@+id/tempTextView"
        android:layout_toEndOf="@+id/tempTextView" android:textSize="30sp"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <ImageView
        android:id="@+id/weatherImageView"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/icon_brokenclouds"
        tools:ignore="ContentDescription"
        android:layout_marginEnd="25dp"
        android:layout_below="@+id/cityTextView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/cityTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/weatherDesctextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Weather Description"
        android:textColor="?attr/colorControlActivated"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/weatherImageView"
        android:layout_alignStart="@+id/tempTextView" />


</RelativeLayout>



