<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Temp::"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="italic"
        android:layout_alignBaseline="@+id/degView"
        android:layout_alignBottom="@+id/degView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:id="@+id/speedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="89dp"
        android:layout_toEndOf="@+id/textView"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min Temp::"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="italic"
        android:layout_alignBaseline="@+id/speedView"
        android:layout_alignBottom="@+id/speedView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/degView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speedView"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/textView"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/weatherImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/degView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        app:srcCompat="@drawable/icon_mist" />

</RelativeLayout>